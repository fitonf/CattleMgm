@model RolesCreateViewModel

@{
    ViewData["Title"] = "Create Role";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" asp-controller="Roles" method="post">
    <div class="form-group">
        <label asp-for="Name" class="required">Emri Rolit</label>
        <input type="text" asp-for="Name" class="form-control" id="roleName" placeholder="Shkruani emrin">
        <span asp-validation-for="Name" class="text-danger"></span>
        <span id="roleExistsError" class="text-danger d-none">You cannot create the same role.</span>
    </div>

    <button type="submit" class="btn btn-primary">Create Role</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

