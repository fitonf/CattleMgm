@model List<RolesViewModel>

@{
    ViewData["Title"] = "Roles";
}

<div class="card">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
        <div class="card-toolbar float-end">
            <a class="btn btn-sm btn-primary" asp-action="Create" asp-controller="Roles">Regjistro</a>
        </div>
    </div>
    <div class="card-body">
        <table id="cattle-table" class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Emri i rolit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a asp-controller="Roles" asp-action="Edit"
                           asp-route-id="@item.Id" class="btn btn-primary">
                                Edit
                            </a>
                        </td>
                        <!-- Butoni SweetAlert (Jo-Funksional)-->
                        @*<td><a class="btn btn-danger" href="javascript:;" onclick="DeleteRole('@item.Id')">Delete</a></td*@
                        

                        <!-- Butoni Normal (Fshine rolin menjehere)-->
                        <td>
                            <a asp-controller="Roles" asp-action="Delete"
                           asp-route-id="@item.Id" class="btn btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function() {
            $('#cattle-table').DataTable();
        });


        //SweetAlert Button
        var DeleteUser = function(id) {
            Swal.fire({
                title: 'A dëshrinoi të fshini rolin?',
                showDenyButton: true,
                showCancelButton: true,
                confirmButtonText: 'Save',
                denyButtonText: `Don't save`,
            }).then((result) => {
                /* Read more about isConfirmed, isDenied below */
                if (result.isConfirmed) {
                    Swal.fire('Saved!', '', 'success')
                } else if (result.isDenied) {
                    Swal.fire('Changes are not saved', '', 'info')
                }
            })
        }


    </script>
}
