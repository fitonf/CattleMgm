@model List<RolesViewModel>

@{
    ViewData["Title"] = "Roles";
}
<div class="card">
    <div class="card-header">
        @* <h4>@ViewData["Title"]</h4> *@
        <div class="card-toolbar float-end">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Roles">Regjistro</a>
        </div>
    </div>

    <div class="card-body">
        <table id="roles-table" class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Emri i Rolit</th>
                    <th>Veprimet</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a asp-controller="Roles" asp-action="Edit"
                           asp-route-id="@item.Id" class="btn btn-primary">
                                Edit
                            </a>
                        </td>

                        <!-- Butoni në SweetAlert -->
                        <td><a class="btn btn-danger" href="javascript:;" onclick="DeleteRole('@item.Id')">Delete</a></td>

                        <!-- Butoni Normal (Fshin rolin menjehere)-->
                        @*<a asp-controller="Roles" asp-action="Delete"
                    asp-route-id="@item.Id" class="btn btn-danger">
                    Delete
                    </a>
                    *@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function() {
            $('#roles-table').DataTable();
        });


        //SweetAlert Button
        function DeleteRole(roleId) {
            debugger;
            Swal.fire({
                title: 'A jeni të sigurt?',
                text: "Ju nuk do mund të ktheheni prapa!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Fshij'
            }).then((result) => {
                debugger;
                if (result.value) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Roles")/' + roleId,
                        type: 'POST',
                        success: function(result) {
                            Swal.fire({
                                title: 'Fshier!',
                                text: 'Roli u fshi me sukses!',
                                icon: 'success',
                                timer: 1500,
                                timerProgressBar: true,
                            }).then((result) => {
                                location.reload();
                            });
                        },
                        error: function(xhr, status, error) {
                            Swal.fire({
                                title: 'Error!',
                                text: 'An error occurred while deleting the role: ' + error,
                                icon: 'error'
                            });
                        }
                    });
                }
            });
        }
    </script>
}
