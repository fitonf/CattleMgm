@model MilkCreateViewModel
@{
    ViewData["Title"] = "Regjistrimi i mbledhjes se qumeshtit";
}

<div class="card">
    <div class="card-header with-border">
        <h4>Plotesoni te dhenat me poshte</h4>
    </div>
    <form id="createForm" method="post">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <label class="required" asp-for="CattleId">Gjedhja</label>
                    @Html.DropDownListFor(m=>m.CattleId, ViewBag.Cattles as SelectList, "Zgjedh", new { @class = "form-control select2"})
                    @*ekuivalente me dropdownlistfor*@
                    @* <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-control select2">
                    <option></option>
                    </select>*@
                    <span asp-validation-for="CattleId" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="LitersCollected">Litrat e mbledhura</label>
                    <input asp-for="LitersCollected" class="form-control" />
                    <span asp-validation-for="LitersCollected" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Price">Qmimi</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>


            </div>
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-sm btn-primary" value="Regjistro" />
        </div>
    </form>

</div>