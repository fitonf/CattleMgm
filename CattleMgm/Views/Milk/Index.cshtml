@model List<MilkViewModel>

@{
    ViewData["Title"] = "Lista e mbledhjes se qumeshtit";
}
<div class="card">
    <div class="card-header">
        <div class="card-toolbar float-end">
            <a class="btn btn-sm btn-primary" asp-action="Create" asp-controller="Milk">Regjistro</a>
        </div>
    </div>
    <div class="card-body">
        <div class="button-items" style="float:right;">
            <div class="btn-group dropstart">
                <button style="margin:0 5px 7px 0" type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="mdi mdi-chevron-left"></i>Shkarko
                </button>
                <div class="dropdown-menu">
                    <button class="dropdown-item" onclick="Report(ReportType.PDF)">
                        <img src="~/Media/Extensions/pdf.png" class="btn-download" asp-append-version="true" />
                        <span class="title text-center w-100">PDF</span>
                    </button>
                    <button class="dropdown-item" onclick="Report(ReportType.EXCEL)">
                        <img src="~/Media/Extensions/xls.png" class="btn-download" asp-append-version="true" />
                        <span class="title text-center w-100">Excel</span>
                    </button>
                </div>
            </div>
        </div>
        <table id="milk-table" class="table table-responsive">
            <thead>
                <tr>
                    <th>Identifikuesi </th>
                    <th>Emri i gjedhes</th>
                    <th>Data e grumbullimit</th>
                    <th>Litrat te mbledhura</th>
                    <th>Cmimi</th>
                    <th>Profiti</th>
                    <th>Veprimet</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Identifier</td>
                        <td>@item.CattleName</td>
                        <td>@item.DateCollected</td>
                        <td>@item.LitersCollected l</td>
                        <td>@item.Price $</td>
                        <td>@item.TotalProfit $</td>
                        <td class="button-td">
                            <a class="btn btn-sm btn-primary" onclick="EditMilk(@item.Id)"><i class="fa fa-edit"></i>Edit</a>
                            <a class="btn btn-sm btn-danger" href="javascript:;" onclick="DeleteMilk('@item.Id')">Delete</a>
                            @*@(await Html.PartialAsync("_ActionButtonsPartial", new List<ActionButton> { new ActionButton { Title = Resource.Edit, Icon = SvgIcon.Edit, OnClick = $"EditSubMenu('{menu.mide}', '{AesCrypto.Enkrypt(menu.ide) }')", Display = true },
                        new ActionButton{ Title = Resource.Delete, Icon = SvgIcon.Delete, OnClick = $"DeleteSubMenu('{AesCrypto.Enkrypt(menu.ide) }')", Display = true }, }))
                        *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $("#milk-table").DataTable({
            keys: true,
            responsive: true,
            pageLength: 10,
            "ordering": false

        });
        function EditMilk(Id) {
            $('#modal-center-large').find('.modal-content').load('@Url.Action("_Edit", "Milk")?id=' + Id, function () {
                $('#modal-center-large').modal('toggle')
            })
        }
        function DeleteMilk(Id) {
            debugger;
            Swal.fire({
                title: 'A jeni të sigurt?',
                text: "Ju nuk do mund të ktheheni prapa!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Fshij'
            }).then((result) => {
                debugger;
                if (result.value) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Milk")/' + Id,
                        type: 'POST',
                        success: function (result) {
                            Swal.fire({
                                title: 'Fshier!',
                                text: 'E dhena u fshi me sukses!',
                                icon: 'success',
                                timer: 1500,
                                timerProgressBar: true,
                            }).then((result) => {
                                location.reload();
                            });
                        },
                        error: function (xhr, status, error) {
                            Swal.fire({
                                title: 'Error!',
                                text: 'An error occurred while deleting the role: ' + error,
                                icon: 'error'
                            });
                        }
                    });
                }
            });
        }
        function Report(type) {
            if (type == '@((int)ReportType.PDF)' || type == '@((int)ReportType.Excel)') {
                $.ajax({
                    url: "/Milk/OpenIndexReport",
                    cache: false,
                    type: "POST",
                    dataType: "json",
                    success: function () {
                        if (type == '@((int)ReportType.Excel)')
                            window.open("/Reports/Design/?format=excel", '_blank');
                        else {
                            let W = window.open("/Reports/Design/?format=pdf", '_blank');
                            W.onload = function () { this.document.title = 'Raporti'; }
                        }
                    }
                });
            }
        }
    </script>

}