@model List<CattleViewModel>

<div class="card">
    <div class="card-header">
        <div class="card-toolbar float-end">
            <a class="btn btn-sm btn-primary" asp-action="Create" asp-controller="Cattle">Regjistro</a>
        </div>
    </div>
    <div class="card-body">
        <table id="cattle-table" class="table table-responsive">
            <thead>
                <tr>
                    <th>Emri i gjedhit</th>
                    <th>Numri identifikues</th>
                    <th>Raca</th>
                    <th>Data e lindjes</th>
                    <th>Gjinia</th>
                    <th>Ferma</th>
                    <th>Emri i fermerit</th>
                    <th>Krijuar nga</th>
                    <th>Komuna</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.UniqueIdentifier</td>
                        <td>@item.Breed</td>
                        <td>@item.BirthDate</td>
                        <td>@item.Gender</td>
                        <td>@item.FarmName</td>
                        <td>@item.FarmerName</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.Komuna</td>
                        <td>
                            <a class="btn btn-sm btn-secondary" asp-route-id="@item.Id" asp-action="Details" asp-controller="Cattle"><i class="fa fa-info-circle"></i> Details</a>
                            <a class="btn btn-sm btn-primary" onclick="EditMenu('@AesCrypto.Enkrypt(item.Id)')"><i class="fa fa-edit"></i>Edit</a>
                            <a class="btn btn-sm btn-danger" href="javascript:;" onclick="deleteCattle('@item.Id')">Delete</a>
                        </td>
                        
                       
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $("#cattle-table").DataTable({
            keys: true,
            responsive: true,
            pageLength: 10,
            "ordering": false

        });

        function EditMenu(id) {
            $('#modal-center-large').find('.modal-content').load('@Url.Action("Edit", "Cattle")?ide=' + id, function () {
                $('#modal-center-large').modal('toggle')
            })
        }
        function deleteCattle(id) {
            Swal.fire({
                title: 'A jeni te sigurt?',
                text: "Kjo ben fshirjen e gjedhes!",
                icon: 'warning',
                showCancelButton: true,
                cancelButtonText: 'Jo, kthehu.',
                buttonsStyling: false,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Po, deshiroj ta fshij!',
                customClass: {
                    confirmButton: "btn btn-primary",
                    cancelButton: "btn btn-secondary"
                }
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Cattle")',
                        type: 'POST',
                        data: { id: id },
                        success: function (data) {
                            Swal.fire({
                                text: "Gjedhi u fshi me sukses!",
                                icon: "success",
                                buttonsStyling: false,
                                confirmButtonText: "Ne rregull!",
                                customClass: {
                                    confirmButton: "btn btn-primary"
                                }
                            }).then(function (result) {
                                location.href = location.href;
                            });
                        },
                        error: function (xhr, status, error) {
                            console.log(xhr.responseText); // Log the full error response
                            Swal.fire({
                                text: "Sorry, there was an error deleting the cattle. Please try again later.",
                                icon: "error",
                                buttonsStyling: false,
                                confirmButtonText: "Ok, got it!",
                                customClass: {
                                    confirmButton: "btn btn-primary"
                                }
                            });
                        }
                    });
                }
            });
        }
    </script>
}
